@model List<hr.web.ViewModel.DepartmentViewModel>



<form asp-controller="Department" asp-action="Index" method="get">

    <div class="row">
        <div class="col-md-4">
            <a asp-controller="Department" asp-action="Create" class="btn btn-primary"> Add New Department !</a>
        </div>
    </div>


</form>
</br>

@if (Model.Any())
{
    <table class="table table-hover">
        <tr>
            <th> Id </th>
            <th> Name </th>
            <th> Date Create </th>
            <th> Actions </th>

        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <th> @item.Id</th>
                <th> @item.Name</th>
                <th>@item.CreateAt.ToString("yyyy/MM/dd") </th>

                <th>
                    <a class="btn btn-warning" href="~/Department/Update/@item.Id">Update</a>
                    <a class="btn btn-danger" href="~/Department/Delete/@item.Id">Delete</a>



                </th>


            </tr>
        }
    </table>

}
else
{
    <div class="alert alert-warning">
        No Data Base Found
    </div>
}
